<resources>

    <!-- Base application theme. -->
    <style name="BigButBoringTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BigButBoringTheme.TableRow" parent="BigButBoringTheme">
        <item name="android:paddingRight">@dimen/table_row_padding</item>
        <item name="android:paddingLeft">@dimen/table_row_padding</item>
    </style>

    <style name="BigButBoringTheme.TableRow.History" parent="BigButBoringTheme.TableRow">
        <item name="android:paddingBottom">@dimen/table_row_padding</item>
        <item name="android:paddingTop">@dimen/table_row_padding</item>
    </style>

    <style name="BigButBoringTheme.Text.Table.Body.History" parent="BigButBoringTheme">
        <item name="android:gravity">start</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="BigButBoringTheme.Text.Base" parent="BigButBoringTheme">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BigButBoringTheme.TextView" parent="BigButBoringTheme.Text.Base">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name ="BigButBoringTheme.Text.CardView" parent="BigButBoringTheme.Text.Base">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BigButBoringTheme.Text.Table.Body" parent="BigButBoringTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="BigButBoringTheme.EditText.Table.Body" parent="BigButBoringTheme">
        <item name="android:inputType">phone</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLength">4</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BigButBoringTheme.Text.Table.Header" parent="BigButBoringTheme.Text.Base">
        <item name="android:background">@drawable/toolbar_rounded_edges</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigButBoringTheme.Popup.Title" parent="BigButBoringTheme.Text.Base">
        <item name="android:background">@drawable/toolbar_rounded_edges</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigButBoringTheme.Toolbar" parent="BigButBoringTheme">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>
